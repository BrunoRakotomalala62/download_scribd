modules = ["nodejs-20", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["chromedriver", "chromium", "coreutils", "geckodriver"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Scribd Downloader"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web Interface"

[[workflows.workflow]]
name = "Scribd Downloader"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python scribd-downloader.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Web Interface"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80
